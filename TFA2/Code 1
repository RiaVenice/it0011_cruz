first = input("Enter Your First Name: ")
last = input("Enter Your Last Name: ")
age = input("Enter Your Age Name: ")

slice = first[0:3] 
print("Full Name: " + first + " " + last)
print("Sliced Name: " + slice)
message = "Greeting Message: Hello {} ! Welcome. You are {} years old."
print(message.format(slice, age))
